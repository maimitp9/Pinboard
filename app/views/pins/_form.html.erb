<%= form_for @pin do |f| %>
	<% if @pin.errors.any? %>
		<div id='error'>
			<h2><%= pluralize(@pin.errors.count, 'error') %> prevent to save this object</h2>
			<ul>
				<% @pin.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label :image, 'Choose Image' %><br>
		<%= f.file_field :image %>
	</div>
	<div class="form-group">
		<%= f.label :title %><br>
		<%= f.text_field :title, class: 'form-control', placeholder: 'Enter Title' %>
	</div>
	<div class="form-group">
		<%= f.label :description %><br>
		<%= f.text_area :discription, class: 'form-control', placeholder: 'Enter Description' %>
	</div>

		<%= f.submit class: 'btn btn-primary' %>  <%= link_to 'Cancel', pins_path, class: 'btn btn-danger' %>
	

<% end %>
